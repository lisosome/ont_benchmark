process {
  executor = 'slurm'
  scratch = true
  errorStrategy = 'finish'
  
  withName:NANOSV {
    container: "docker://lisosome/nanosv:1.2.4"
    clusterOptions: "--mem-per-cpu=20gb --cpus-per-task 8 --ntasks-per-node=1 --time=96:00:00 -p THIN -A burlo -J NanoSV"
  }
  
  withName:DUET {
    container: "docker://lisosome/duet:1.0.0"
    clusterOptions: "--mem-per-cpu=20gb --cpus-per-task 8 --ntasks-per-node=1 --time=96:00:00 -p THIN -A burlo -J duet"
  }

  withName:SNIFFLES {
    container: "docker://lisosome/ont_benchmark:final"
    clusterOptions: "--mem-per-cpu=20gb --cpus-per-task 8 --ntasks-per-node=1 --time=96:00:00 -p THIN -A burlo -J sniffles"
  }
  
  withName:NANOVAR {
    container: "docker://lisosome/ont_benchmark:final"
    clusterOptions: "--mem-per-cpu=20gb --cpus-per-task 8 --ntasks-per-node=1 --time=96:00:00 -p THIN -A burlo -J nanovar"
  }
  
  withName:CAMPHOR {
    container: "docker://lisosome/ont_benchmark:final"
    clusterOptions: "--mem-per-cpu=20gb --cpus-per-task 8 --ntasks-per-node=1 --time=96:00:00 -p THIN -A burlo -J camphor"
  }

withName:CUTESV {
    container: "docker://lisosome/ont_benchmark:final"
    clusterOptions: "--mem-per-cpu=20gb --cpus-per-task 8 --ntasks-per-node=1 --time=96:00:00 -p THIN -A burlo -J camphor"
  }
}


singularity {
    enabled = true
    singularity.runOptions = "--bind /orfeo/cephfs/scratch/burlo/nardone/vcf_SV_valentina/ont_benchmark"
}